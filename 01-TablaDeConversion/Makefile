RM = rm
FINAL-FILE-NAME  = tablaDeConversion
OBJECT-FILE-NAME = $(FINAL-FILE-NAME).o
ORIGIN-FILE-NAME = $(FINAL-FILE-NAME).c

run: $(FINAL-FILE-NAME)
	./$(FINAL-FILE-NAME)

$(FINAL-FILE-NAME):  $(OBJECT-FILE-NAME)
	gcc $(OBJECT-FILE-NAME) -o $(FINAL-FILE-NAME)
	
$(OBJECT-FILE-NAME):  $(ORIGIN-FILE-NAME)
	gcc -c $(ORIGIN-FILE-NAME) -o $(OBJECT-FILE-NAME) -std=c18 

clean: 
	$(RM) $(OBJECT-FILE-NAME)
	$(RM) $(FINAL-FILE-NAME)      

# -f fuerza a que el programa ignore los errores


# IMPORTANT NOTE: NEVER LEAVE A SPACE AFTER THE * BECAUSE IT'LL DELETE ALL YOUR FILES